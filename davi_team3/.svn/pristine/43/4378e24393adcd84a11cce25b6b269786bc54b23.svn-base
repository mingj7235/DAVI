@charset "UTF-8";

#boardList {
	margin: 0 auto;
	align-items: center;
	font-size: 0.9em;
}

#boardList tbody tr:hover {
	background-color: rgba(230, 235, 237, 0.25);
}

#boardList a.aboard {
	/* color: #3d4449; */
	color: #7f888f;
	border-bottom: none;
	text-decoration: none;
}

#boardList td a {
	cursor: default;
}

h2 {
	margin: 0 0 2em 0 !important;
}

section i {
	font-size: 1.5em;
}

.replyArti {
	border-top: 1px solid rgba(0, 59, 251, 0.5);
}

.replycontent {
	resize: none;
	border: none;
}

.replyLevel-0 {
	margin-left: 0px;
}

.replyLevel-1 {
	margin-left: 20px;
}

.replyLevel-2 {
	margin-left: 30px;
}

.replyLevel-3 {
	margin-left: 45px;
}

#summernote {
	box-shadow: inherit;
}

.smallTitle {
	margin-right: 1em;
	 font-size: 0.8em;
	 color:#9fa3a6;
}

@media screen and (max-width: 680px) {
	.viewHead{
		display: none !important;
	}
	.viewTitle h3{
		font-size: 1em !important;
	}
}

@media screen and (max-width: 480px) {
	.mainFrame {
		width:100% !important;		
	}
	
}

textarea {
	    padding: 0em 0em !important;
}

.hostWriter {
	
    padding: 1px;
    color: salmon;
}

form{
	margin : 0 !important;
	
}

#replyModifyOk {
	display: none;
	box-shadow: none;
}

#replyModifyOk i {
	font-size: 1.31rem;
	color: rgba(0, 59, 251, 1);
}

.iconButtons a {
	margin-right: 10%;
	font-size:0.8em;
}

#replyBox{
	/* border:1px solid black; */
	/* padding:1%; */
}

.firstLine{
	width:100%;
	display:flex;
	justify-content:space-between;
}

#replyModify, #replyDelete, #replyModifyOk, #replyWrite{
	font-size:0.7em;
}

#replyBtn {
	font-size:0.6em;
}