@charset "UTF-8";

#memberChartMain {
	/* background-color: #fbfcfe; */
	background-color: green;
	margin: 0 auto;
}

.headresize {
	width: 9%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.resize {
	width: 15%;
	display: flex;
	justify-content: center;
}

.resize a {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	padding-top: 2%;
}

.imgsize {
	width: 100%;
	object-fit: contain;
}

.columChartP {
	margin: 0 0 1em 0;
}

.content p {
	margin-bottom: 1em !important;
}

.gtr-200 {
	margin-bottom: 3%;
}

#compareWeight {
	display: none;
	height: 100px;
}

#weightUp {
	display: none;
}

button {
	color: white;
	background-color: rgb(0, 59, 251);
}

#weightDown {
	box-shadow:rgba(0, 59, 251, 0.2) !important;
}

#weightUp {
	box-shadow:rgba(0, 59, 251, 0.2) !important;
}

.chartIcon i {
	font-size: 3em;
	color: cornflowerblue;
	margin-bottom: 15px;
}

.chartDetail {
	font-size: 0.8em;
    color: #9fa3a6;
}

.myProfile {
	background-color: white;
	width:15%; display:flex;
	flex-direction:column;
	justify-content:center;
	align-items:center;	
}
